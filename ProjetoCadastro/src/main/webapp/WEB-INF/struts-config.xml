<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
       "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="pessoaForm"
					type="br.com.cadastrarpessoa.form.PessoaForm"/>
	</form-beans>

	<action-mappings>
		<action path="/cadastroPessoa" 
				name="pessoaForm"
				type="br.com.cadastrarpessoa.action.PessoaAction" 
				input="/index.jsp">
			<forward name="success" path="/index.jsp" />
		</action>
	</action-mappings>

	<message-resources
		parameter="info.java.tips.i18n.MessageBundLe"/>
</struts-config>